{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <main>
        <section>
            <h2>Articles</h2>
            <ul>
                {% for article in articles %}
                    <li>
                        <a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </section>
    </main>
{% endblock %}
